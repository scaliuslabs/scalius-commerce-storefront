---
import { ChevronRight } from "lucide-react";
import type { Product } from "@/lib/api";

interface Props {
  product: Product;
  category: Product["category"] | null;
}

const { product, category } = Astro.props;
---

<nav
  class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-1.5 lg:py-2"
  aria-label="Breadcrumb"
>
  <ol
    class="flex items-center space-x-1 lg:space-x-1.5 overflow-hidden text-ellipsis whitespace-nowrap text-[10px] sm:text-xs"
  >
    <li>
      <a
        href="/"
        class="text-gray-500 hover:text-primary transition-colors duration-200 font-medium"
        >Home</a
      >
    </li>
    <li class="flex items-center">
      <ChevronRight className="h-3 w-3 text-gray-300" />
    </li>
    {
      category && (
        <>
          <li>
            <a
              href={`/categories/${category.slug}`}
              class="text-gray-500 hover:text-primary transition-colors duration-200 font-medium"
            >
              {category.name}
            </a>
          </li>
          <li class="flex items-center">
            <ChevronRight className="h-3 w-3 text-gray-300" />
          </li>
        </>
      )
    }
    <li class="text-gray-900 font-semibold truncate">{product.name}</li>
  </ol>
</nav>
